{
  "manifest_version": 3,
  "name": "Skin Irritant Scanner",
  "version": "1.0",
  "permissions": ["tabs", "activeTab"],
  "action": {
    "permissions": ["tabs", "activeTab"],
    "default_popup": "popup.html"
  },

    "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ] 
}
